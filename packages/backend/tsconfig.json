{
    "compilerOptions": {
        "target": "ESNext",
        "lib": "es2022",
        "jsx": "react",
        "module": "NodeNext",
        "moduleResolution": "Node16",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
}
